<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="java.util.ArrayList"/>
        <import type="kr.co.hdtel.facepass.newData.FaceItem2"/>
        <variable
            name="faceList"
            type="ArrayList&lt;FaceItem2>" />
        <variable
            name="fragment2"
            type="kr.co.hdtel.facepass.TabFragment2" />
    </data>
    <FrameLayout
        android:layout_width="992dp"
        android:layout_height="458dp"
        android:layout_margin="16dp"
        tools:context=".TabFragment2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:viewBindingIgnore="true">
            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:background="@drawable/border"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="244dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="82dp"
                    android:layout_marginRight="31dp"
                    android:layout_marginTop="24.5dp"
                    android:layout_marginBottom="25.5dp"
                    android:textSize="20sp"
                    android:text="이름"
                    android:textColor="#474747"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginTop="24.5dp"
                    android:layout_marginBottom="25.5dp"
                    android:textSize="20sp"
                    android:text="등록일시"
                    android:textColor="#474747"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="57dp"
                    android:layout_marginTop="24.5dp"
                    android:layout_marginBottom="25.5dp"
                    android:textSize="20sp"
                    android:text="방문기간"
                    android:textColor="#474747"
                    android:textAlignment="center"
                    />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="24.5dp"
                    android:layout_marginBottom="25.5dp"
                    android:layout_marginRight="60dp"
                    android:textSize="20sp"
                    android:text="얼굴인식"
                    android:textColor="#474747"
                    android:textAlignment="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/green_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#23a696"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">
                <ImageButton
                    android:id="@+id/close"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="26dp"
                    android:background="@drawable/common_btn_lst_close"/>
                <LinearLayout
                    android:id="@+id/used"
                    android:layout_width="62dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="13dp">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/common_btn_lst_fp_use"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="사용"
                        android:textSize="16sp"
                        android:textColor="@color/color_white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/unused"
                    android:layout_width="62dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="13dp">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/common_btn_lst_fp_not_use"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="사용안함"
                        android:textSize="16sp"
                        android:textColor="@color/color_white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/delete"
                    android:layout_width="62dp"
                    android:layout_height="50dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="13dp">
                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:background="@drawable/common_btn_lst_delete"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:text="삭제"
                        android:textSize="16sp"
                        android:textColor="@color/color_white"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="34dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="23dp"
                    android:layout_marginRight="60dp"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/clicked_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineHeight="17sp"
                        android:text="32"
                        android:textColor="#acd933"
                        android:textSize="22sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineHeight="17sp"
                        android:text=" / "
                        android:textColor="#ffffff"
                        android:textSize="22sp"
                        />
                    <TextView
                        android:id="@+id/all_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineHeight="17sp"
                        android:text="52"
                        android:textColor="#ffffff"
                        android:textSize="22sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="378dp"
                android:background="@color/color_white"
                app:item2="@{faceList}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/linear_layout" />
        </LinearLayout>
    </FrameLayout>
</layout>